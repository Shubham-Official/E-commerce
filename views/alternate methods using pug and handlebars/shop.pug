extends layouts/main-layout.pug 

block styles 
    link(rel="stylesheet" href="/css/product.css")

block content 
    main 
        if prods.length > 0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQbXCpiYKfm11YUjU715AE4xto0XO6fzBiL8Q&usqp=CAU" alt="A Book")
                        div.card__content
                            h2.product__price Rs19.99
                            p.product__description A very interesting book about so many even more interesting things
                        .card__actions 
                            button.btn Add to Cart 
        else 
            h1 No Products
